# Backend
DATABASE_URL=sqlite:///./sql_app.db
SECRET_KEY=your_secret_key
# API_ENV=production # Uncomment for production

# Frontend
FRONTEND_URL=https://your-frontend-url.vercel.app
# OR http://localhost:3000 for local development

# Google / YouTube
# Get these from Google Cloud Console (APIs & Services > Credentials)
# Enable "YouTube Data API v3" and "Google My Business API" (if available)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-backend-url.onrender.com/social/callback/google

# Instagram (Meta)
# Get these from Meta for Developers (Create App > Instagram Graph API)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=https://your-backend-url.onrender.com/social/callback/instagram

# X (Twitter)
# Get these from X Developer Portal (Project > App > Keys and Tokens)
# Enable "OAuth 2.0" with Type "Confidential Client"
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=https://your-backend-url.onrender.com/social/callback/twitter

# OpenAI (Optional for AI generation)
OPENAI_API_KEY=
